<html>
	<head>
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
        <link href = "/css/enrolldesign.css" rel = "stylesheet">
		<!-- Latest compiled JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		<script src="/js/enrollscripts.js"> </script>
	</head>

	<body>
	<form action = "/enroll" method = "post" role = "form">
	<!--sending csrf token-->

        <input type="hidden" id= "_csrf" name="_csrf" value="<%= csrfToken %>">
		<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">

			<div class="carousel-inner" role="listbox">
    			<div class="item active">
    				<div class = "step-container"><!--panel div-->
                		<div class = "panel panel-default shadowy steppanel"><!-- panel start-->
                   			<div class = "panel-heading" id="step1">
                   				<h2 class = "text-center">Step 1: Search For User</h2>
                   			</div>
                   			<div class = "panel-body">
                        		<div class = "row">
                            		<div class="form-group col-sm-offset-1 col-sm-5">
                                		<label class="control-label"><span class="requiredasterisk">*</span>Email:</label>
                                		<span id = "checkemail"></span>
                                		<input class = "form-control reqIn" type="text" name ="email" id="email" placeholder = "Enter Email" onchange="displayUser(this.value);" required pattern="[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?\.)+(?:[A-Z]{2}|com|org|net|gov|mil|biz|info|mobi|name|aero|jobs|museum)\b">
                                		<!--Character restrictions-->
                            		</div>
                            	</div>
                            	<div class = "panel panel-default steppanel col-sm-offset-1 col-sm-5" id="user-info"><!-- panel start-->
                            		<div  class = "row">
                            			<!-- show user info -->
                            			<div>
	                            			<p id="user-id"></p>
    	                        			<p id="user-email"></p>
                            				<p id="user-fname"></p>
                            				<p id="user-lname"></p>
                            			</div>
                            		</div>
                            	</div>
                            	<!-- Next Button -->
                            	<div class = "row">
		                            <div class = "col-sm-offset-6 col-sm-5">
                                		<button type = "button" class = "btn btn-success topage2 next-button next-hidden" href="#myCarousel" data-slide="next" id="next-step1" disabled>Next&nbsp;&nbsp;&nbsp;&rarr;</button>
                            		</div>
                        		</div>   
	                        </div>
    					</div> <!--panel body-->
    				</div><!--panel default-->
    			</div><!-- step container -->

                <!-- step2 container -->
                <div class="item">
                    <div class = "step-container"><!--panel div-->
                        <div class = "panel panel-default shadowy steppanel"><!-- panel start-->
                            <div class = "panel-heading" id="step2">
                                <h2 class = "text-center">Step 2: Select Courses</h2>
                            </div>

                            <div class = "panel-body">
                                <div class ="row">
                                    <div id="courselist" class ="col-sm-offset-1 col-sm-5">

                                    </div>
                                </div>
                                <!-- Next Button -->
                                <div class = "row">
                                    <div class = "col-sm-offset-6 col-sm-5">
                                        <button type = "button" class = "btn btn-success topage2 next-button" href="#myCarousel" data-slide="next" id="next-step2" disabled>Next&nbsp;&nbsp;&nbsp;&rarr;</button>
                                    </div>
                                </div>   
                            </div>
                        </div> <!--panel body-->
                    </div><!--panel default-->
                </div><!-- step2 container -->

  			</div>
		</div>
	</form>
	</body>
</html>
