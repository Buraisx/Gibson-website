<!DOCTYPE html>
<html lang="en">

<%- include standardnavbar.ejs %>

<head>
    <!-- CSS for the datepicker calendar -->
    <link href="/css/datepicker.css" rel="stylesheet">
    <link href = "/css/signupdesign.css" rel = "stylesheet">
    <script src = "/js/serializecontacts.js"></script>
    <script src = "/js/passwordvalidation.js"></script>
    <script src = "/js/studentinputboxes.js"></script>
    
    <script src = "/js/submitbutton.js"></script>
    <script src = 'https://www.google.com/recaptcha/api.js'></script>
    <!--script src = "/js/captcha.js"></script-->
</head>

<body class="index" >
<form name="frm" action = "/signup" method = "post" role = "form">
<!--sending csrf token-->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div id="myCarousel" class="carousel slide" style="height:700px;" data-interval="false">

        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
            <div class="item active">
                <!-- Set the first background image using inline CSS below. -->
                <div class="fill" style="background-image:url(/img/cat-1044750_960_720.jpg);">
            <div class = "col-sm-offset-3 col-sm-6"><!--panel div-->
                <div class = "panel panel-default shadowy signuppanel"><!-- panel start-->
                   <div class = "panel-heading">
                   <h2 class = "text-center">Step 1: Create Your Account</h2>
                   </div>
                    <div class = "panel-body">

                        <!--Input Username-->
                        <div class = "row">
                            <div class="form-group col-sm-offset-1 col-sm-10">
                                <label class="control-label"><span class="required">*</span>Username:</label>
                                <span id = "confirmuser"></span>
                                <input class = "form-control reqIn" type="text" name ="username" id="username" placeholder = "Enter Username"onkeyup="checkSpecialChars(); return false;" required pattern="\w+">
                                <!--Character restrictions-->
                            </div>
                        </div>

                        <!--Input Password-->
                        <div class = "row">
                            <div class="form-group col-sm-offset-1 col-sm-5">
                                <label class="control-label"><span class="required">*</span>Password:</label>
                                <input type="password" class = "form-control reqIn" name = "password" id="password" placeholder="Enter Password"  onkeyup="checkPass(); return false;" minlength= "6" required pattern="(?=.*\d)(?=.*[a-zA-Z]).{6,}">
                                <!--Character restrictions-->
                            </div>
                            <div class="form-group col-sm-5">
                                <label class="control-label"><span class="required">*</span>Confirm Password:</label>
                                
                                <input type="password" class = "form-control reqIn" name = "passwordhashed" id="passwordhashed" placeholder="Re-enter Password" onkeyup="checkPass(); return false;" required pattern="(?=.*\d)(?=.*[a-zA-Z]).{6,}">
                                <!--Character restrictions-->
                            </div>
                        </div>
                        <div class = "row">
                            <div class = "col-sm-offset-1 col-sm-10">
                                <span id="confirmpass" class="confirmpass"></span>
                            </div>
                        </div>
                        <div class = "row">
                            <div class="form-group col-sm-offset-1 col-sm-10">
                                <label class="control-label"><span class="required">*</span>Email:</label>
                                <input class = "form-control reqIn" type="email" name = "email" id="email" placeholder="Enter email" required pattern="[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?\.)+(?:[A-Z]{2}|com|org|net|gov|mil|biz|info|mobi|name|aero|jobs|museum)\b">
                            </div>
                        </div>
                        <div class = "row">
                            <div class = "col-sm-offset-8 col-sm-4">
                                <button type = "button" class = "btn btn-success topage2" href="#myCarousel" data-slide="next">Next Step &nbsp;&nbsp; &nbsp; &rarr;</button>
                            </div>
                        </div>

                     </div><!--panelbody-->
                </div><!--panel-default-->
            </div><!--panel div-->
              </div>
            </div>
            <div class="item">
                <!-- Set the second background image using inline CSS below. -->
                <div class = "fill" style="background-image:url(/img/mountain1.jpg);">
                    <div class = "col-sm-offset-3 col-sm-6"><!--panel div-->
                <div class = "panel panel-default shadowy  signuppanel"><!-- panel start-->
                   <div class = "panel-heading">
                   <h2 class = "text-center">Step 2: About You</h2>
                   </div>
                    <div class = "panel-body">

                        <!--Input Username-->
                        <div class = "row">
                            <div class = "form-group col-sm-offset-1 col-sm-5">
                                <label><span class="required">*</span>First Name:</label>
                                <input type = "text" class = "form-control reqIn" name = "fname" id = "fname" placeholder="eg. Bob" required pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                            </div>
                            <div class = "form-group col-sm-5">
                                <label><span class="required">*</span>Last Name:</label>
                                <input type = "text" class = "form-control reqIn" name = "lname" id = "lname" placeholder="eg. Smith" required pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                            </div>
                        </div>

                        <!--Input Password-->
                        <div class = "row">
                                    <div class = "form-group col-sm-offset-1 col-sm-5">
                                <label><span class="required">*</span>Birthdate:</label>
                                <input type="text" class = "form-control datepicker reqIn" name="birth_date" id="datepicker" placeholder="YYYY/MM/DD" data-date-end-date="0d" required>
                            </div>
                            <div class = "form-group col-sm-5">
                                <label class = "control-label"><span class="required">*</span>Gender:</label>
                                <select class = "form-control" name = "gender" id = "gender" placeholder="Gender" required>
                                    <option value="" disabled selected>Please Select</option>
                                    <option value = "Male">Male</option>
                                    <option value = "Female">Female</option>
                                    <option value = "Other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class = "row">
                            <div class = "form-group col-sm-offset-1 col-sm-7">
                                <label class = "control-label"><span class="required">*</span>Address:</label>
                                <input type = "text" class = "form-control reqIn" name = "address" id = "address" required pattern="^[a-zA-Z0-9._ ]*$" oninvalid="setCustomValidity('Invalid address.')" onchange="try{setCustomValidity('')}catch(e){}"><!--Character restrictions-->
                            </div>
                            <div class = "form-group col-sm-3">
                                <label class = "control-label"><span class="required">*</span>Postal Code:</label>
                                <input type = "text" class = "form-control reqIn" name = "postal_code" id="postal_code" minlength="6" maxlength="7" placeholder="eg. A1A1A1" required pattern="^[a-zA-Z]{1}\d{1}[a-zA-Z]{1} *\d{1}[a-zA-Z]{1}\d{1}$" oninvalid="setCustomValidity('Invalid postal code.')" onchange="try{setCustomValidity('')}catch(e){}"><!--Character restrictions-->
                            </div>
                        </div>
                        <div class = "row">
                            <div class = "form-group col-sm-offset-1 col-sm-3">
                                <label class = "control-label">Apt/Unit#:</label>
                                <input type = "number" class = "form-control" name = "apt" id = "apt" max="6">
                            </div>
                            <div class = "form-group col-sm-3">
                                <label class = "control-label"><span class="required">*</span>City:</label>
                                <input type = "text" class = "form-control" name = "city" id = "city" required pattern="[a-zA-Z. ]+" oninvalid="setCustomValidity('Invalid city.')" onchange="try{setCustomValidity('')}catch(e){}">
                                <!--Character restrictions-->
                            </div>
                            <div class = "form-group col-sm-4">
                                <label class = "control-label"><span class="required">*</span>Province:</label>
                                <select class = "form-control" name = "province" id = "province" placeholder="Province" required>
                                    <option value="" disabled selected>Please Select</option>
                                    <% for(var i=0; i<province_list.length; i++) { %>
                                        <li>
                                            <option value = <%= province_list[i].province_id %>>
                                                <%= province_list[i].province_name %>
                                            </option>
                                        </li>
                                    <% } %>
                                </select>
                            </div>
                        </div>

                            <div class = "row">
                                <div class = "col-sm-offset-1  col-sm-5">
                                    <label for='student'><input type="checkbox" id="student" name = "student"> I am a student</label>
                                </div>
                            </div>
                            <div id='student_info' class='hidden'>
                                <div class="row">
                                    <div class = "form-group col-sm-offset-1 col-sm-5">
                                        <label><span class="required">*</span>School Name:</label>
                                        <input type = "text" class = "form-control " name = "schoolname" id = "schoolname" pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                                    </div>
                                    <div class = "form-group col-sm-5">
                                        <label><span class="required">*</span>Grade/Year:</label>
                                        <input type = "text" class = "form-control" name = "grade" id = "grade" pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                                    </div>
                                </div>
                                <div class="row">
                                    <div class = "form-group col-sm-offset-1 col-sm-5">
                                        <label>Major:</label>
                                        <input type = "text" class = "form-control" name = "major" id = "major" pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                                    </div>
                                    <div class = "form-group col-sm-5">
                                        <label>ESL Level (if applicable):</label>
                                        <input type = "text" class = "form-control" name = "esl" id = "esl" pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                                    </div>
                                </div>
                            </div>

                        <div class = "row">
                            <div class = "col-sm-offset-1 col-sm-4">
                                <button type = "button" class = "btn btn-warning " href="#myCarousel" id="back2" data-slide="prev" >&larr; &nbsp;&nbsp; &nbsp; Back </button>
                            </div>
                            <div class = "col-sm-offset-3 col-sm-4">
                                <button type = "button" class = "btn btn-success " href="#myCarousel" id="next2" data-slide="next">Next Step &nbsp;&nbsp; &nbsp; &rarr;</button>
                            </div>
                        </div>

                    </div><!--panelbody-->
                </div><!--panel-default-->
            </div><!--panel div-->
                </div>
                
            </div>
            <div class="item">
                <!-- Set the third background image using inline CSS below. -->
                <div class = "fill"style="background-image:url(/img/classroom.jpg);">
                    <div class = "col-sm-offset-3 col-sm-6"><!--panel div-->
                        <div class = "panel panel-default shadowy  signuppanel"><!-- panel start-->
                           <div class = "panel-heading">
                           <h2 class = "text-center">Step 3: Contact Information</h2>
                           </div>
                            <div class = "panel-body">

                                <!--Input phonenumber-->
                                <div class = "row">
                                    <div class = "form-group col-sm-offset-1 col-sm-5">
                                        <label class = "control-label">Phone (Primary/Cell):</label>
                                        <input class = "form-control" type = "text" name = "primary_phone" id = "primary_phone" maxlength="16" pattern="\w+" oninvalid="setCustomValidity('Invalid phone number.')" onchange="try{setCustomValidity('')}catch(e){}"><!--Character restrictions-->
                                    </div>
                                    <div class = "form-group col-sm-5">
                                        <label class = "control-label">Phone (Home/Business):</label>
                                        <input class = "form-control" type = "text" name = "secondary_phone" id = "secondary_phone" maxlength="16" pattern="\w+" oninvalid="setCustomValidity('Invalid phone number.')" onchange="try{setCustomValidity('')}catch(e){}"><!--Character restrictions-->
                                    </div>
                                </div>

                                <!--emergency contacts-->
                                <div class = "row">
                                   <div class = "col-sm-offset-1 col-sm-5">
                                        <h4>Emergency Contacts <span class = "normalfont">(Minimum 1)</span></h4>
                                    </div>
                                </div>
                                    <% for(var i=1; i <= MAX; i++) { %>
                                    <div id = <%= "contact" + i %> <% if (i != 1) { %> class = "hidden" <% } %> >
                                        <div class = "row">
                                            <div class = "col-sm-offset-1 col-sm-5">
                                                <label>Emergency Contact <%= i %>:</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class = "form-group col-sm-offset-1 col-sm-5">
                                                <label><span class="required">*</span>First Name:</label>
                                                <input type = "text" class = "form-control" name = <%= "emergencyfname" + i %> id = <%= "emergencyfname" + i %> placeholder= "eg. Alice" pattern= "[a-zA-Z0-9. ]+" oninvalid="setCustomValidity('Invalid name.')" onchange="try{setCustomValidity('')}catch(e){}" <% if (i == 1) { %> required <% } %> ><!--Character restrictions-->
                                            </div>
                                            <div class = "form-group col-sm-5">
                                                <label><span class="required">*</span>Last Name:</label>
                                                <input type = "text" class = "form-control" name = <%= "emergencylname" + i %> id = <%= "emergencylname" + i %> placeholder="eg. Smith" pattern="[a-zA-Z0-9. ]+" oninvalid="setCustomValidity('Invalid name.')" onchange="try{setCustomValidity('')}catch(e){}" <% if (i == 1) { %> required <% } %>><!--Character restrictions-->
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class = "form-group col-sm-offset-1 col-sm-5">
                                                <label><span class="required">*</span>Relationship:</label>
                                                <input type = "text" class = "form-control" name = <%= "relationship" + i %> id = <%= "relationship" + i %> pattern="[a-zA-Z0-9. ]+" <% if (i == 1) { %> required <% } %>><!--Character restrictions-->
                                            </div>
                                            <div class = "form-group col-sm-5">
                                                <label><span class="required">*</span>Phone:</label>
                                                <input type = "text" class = "form-control" name = <%= "ephone" + i %> id = <%= "ephone" + i %> maxlength="16" pattern="\w+" oninvalid="setCustomValidity('Invalid phone number.')" onchange="try{setCustomValidity('')}catch(e){}" <% if (i == 1) { %> required <% } %>><!--Character restrictions-->
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                    <div class="row">
                                        <div class = "col-sm-offset-1 col-sm-5">
                                            <button type = "button" class= "btn btn-info" onclick="addcontact()" id = "addbutton">Add another contact</button>
                                            <button type = "button" class= "btn btn-info hidden" onclick="removecontact()" id = "removebutton">Remove a contact</button>
                                        </div>
                                    </div>
                                    
                                    <div class = "row signupbuttons">
                                        <div class = "col-sm-offset-1 col-sm-3">
                                            <button type = "button" class = "btn btn-warning topage2" id="back" href="#myCarousel" data-slide="prev">&larr; &nbsp;&nbsp; &nbsp; Back </button>
                                        </div>

                                        <div class = "col-sm-offset-1 col-sm-6">
                                            <button type = "submit" class = "btn btn-success btn-block" name="submit" onclick="return submitbutton()" id="submit">Success!</button>
                                        </div>
                                    </div>

                             </div><!--panelbody-->
                        </div><!--panel-default-->
                    </div><!--panel div-->
                </div>
            </div>
        </div>
    </div><!--carousel-->


<!--<div class="g-recaptcha" data-sitekey="6LeqAhkTAAAAAB9OOXvWMNbFrUTNc2sTTX2rivF0"></div>-->
              
</form>



    <%- include standardfooter %>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll visible-xs visible-sm">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- jQuery -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap-datepicker.js"></script>
    <script src="/js/datepicker.js"></script>
<script src = "/js/signupdesign.js"></script>
<script src = "/js/emergencycontacts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="/js/classie.js"></script>
    <script src="/js/cbpAnimatedHeader.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="/js/jqBootstrapValidation.js"></script>
    <script src="/js/contact_me.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="/js/freelancer.js"></script>

</body>

</html>
