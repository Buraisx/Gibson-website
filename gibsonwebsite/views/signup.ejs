<!DOCTYPE html>
<html lang="en">

<%- include standardnavbar.ejs %>

<head>
    <!-- CSS for the datepicker calendar -->
    <link href="css/datepicker.css" rel="stylesheet">

    <script src = "js/serializecontacts.js"></script>
    <script src = "js/passwordvalidation.js"></script>
    <script src = "js/studentinputboxes.js"></script>
    <script src = "js/emergencycontacts.js"></script>
    <script src = "js/submitbutton.js"></script>
</head>

<body id="page-top" class="index">

    <!-- Portfolio Grid Section -->
    <section>
        <div class = "container">
            <h2>Part A: Your Information </h2>
            <p> <%= province_list[0].province_name %> </p>
                <form name="frm" action = "/signup" method = "post" role = "form">

                <!--Input Username-->
                <div class = "row">
                    <div class="form-group col-sm-8">
                        <label class="control-label"><span style="color:red">*</span>Username:</label>
                        <span>*No SPECIAL CHARACTERS</span>
                        <input class = "form-control" type="text" name ="username" id="username" required pattern="\w+">
                        <!--Character restrictions-->
                    </div>
                </div>

                <!--Input Password-->
                <div class = "row">
                    <div class="form-group col-sm-4">
                        <label class="control-label"><span style="color:red">*</span>Password:</label>
                        <input type="password" class = "form-control" name = "password" id="password" placeholder="Enter Password" minlength= "6" required pattern="(?=.*\d)(?=.*[a-zA-Z]).{6,}">
                        <!--Character restrictions-->
                    </div>
                    <div class="form-group col-sm-4">
                        <label class="control-label"><span style="color:red">*</span>Confirm Password:</label>
                        <span id="confirmpass" class="confirmpass"></span>
                        <input type="password" class = "form-control" name = "passwordhashed" id="passwordhashed" placeholder="Re-enter Password" onkeyup="checkPass(); return false;" required pattern="(?=.*\d)(?=.*[a-zA-Z]).{6,}">
                        <!--Character restrictions-->
                    </div>
                </div>
                <span>(Passwords must contain at least one letter and one number and must have a minimum 6 characters. No special characters.)</span>
                <br/><br/>

                <!--Input first name, last name, date, gender-->
                <div class = "row">
                    <div class = "form-group col-sm-2">
                        <label><span style="color:red">*</span>First Name:</label>
                        <input type = "text" class = "form-control" name = "fname" id = "fname" placeholder="eg. Bob" required pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                    </div>
                    <div class = "form-group col-sm-2">
                        <label><span style="color:red">*</span>Last Name:</label>                            
                        <input type = "text" class = "form-control" name = "lname" id = "lname" placeholder="eg. Smith"required pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                    </div>
                    <div class = "form-group col-sm-2">
                        <label><span style="color:red">*</span>Birthdate:</label>
                        <input type="text" class = "form-control" name="birth_date" id="datepicker" placeholder="YYYY/MM/DD" data-date-end-date="0d" required>
                    </div>
                    <div class = "form-group col-sm-2">
                        <label class = "control-label"><span style="color:red">*</span>Gender:</label>
                        <select class = "form-control" name = "gender" id = "gender" placeholder="Gender" required>
                        	<option value="" disabled selected>Please Select</option>
                            <option value = "Male">Male</option>
                            <option value = "Female">Female</option>
                            <option value = "Unknown">Unspecified</option>
                        </select>
                    </div>
                </div>

                <!--Input Address and Postal Code-->
                <div class = "row">
                    <div class = "form-group col-sm-6">
                        <label class = "control-label"><span style="color:red">*</span>Address:</label>
                        <input type = "text" class = "form-control" name = "address" id = "address" required pattern="^[a-zA-Z0-9._ ]*$" oninvalid="setCustomValidity('Invalid address.')" onchange="try{setCustomValidity('')}catch(e){}"><!--Character restrictions-->
                    </div>
                    <div class = "form-group col-sm-2">
                        <label class = "control-label"><span style="color:red">*</span>Postal Code:</label>
                        <input type = "text" class = "form-control" name = "postal_code" id="postal_code" minlength="6" maxlength="7" placeholder="eg. A1A1A1" required pattern="^[a-zA-Z]{1}\d{1}[a-zA-Z]{1} *\d{1}[a-zA-Z]{1}\d{1}$" oninvalid="setCustomValidity('Invalid postal code.')" onchange="try{setCustomValidity('')}catch(e){}"><!--Character restrictions-->
                    </div>
                </div>
                
                <!--Input Unit#, City and Province-->
                <div class = "row">
                    <div class = "form-group col-sm-2">
                        <label class = "control-label">Apt/Unit#:</label>
                        <input type = "number" class = "form-control" name = "apt" id = "apt" max="4">
                    </div>
                    <div class = "form-group col-sm-4">
                        <label class = "control-label"><span style="color:red">*</span>City:</label>
                        <input type = "text" class = "form-control" name = "city" id = "city" required pattern="[a-zA-Z. ]+" oninvalid="setCustomValidity('Invalid city.')" onchange="try{setCustomValidity('')}catch(e){}">
                        <!--Character restrictions-->
                    </div>
                    <div class = "form-group col-sm-2">
                        <label class = "control-label"><span style="color:red">*</span>Province:</label>
                        <select class = "form-control" name = "province" id = "province" placeholder="Province" required>
                        	<option value="" disabled selected>Please Select</option>
                       		<% for(var i=0; i<province_list.length; i++) { %>
        						<li>
        							<option value = <%= province_list[i].province_id %>>
        								<%= province_list[i].province_name %>
        							</option>
						        </li>
    						<% } %>
                        </select>
                    </div>
                </div>

                <!--Input Phone Number-->
                <div class = "row">
                    <div class = "form-group col-sm-4">
                        <label class = "control-label">Phone (Primary/Cell):</label>
                        <input class = "form-control" type = "text" name = "primary_phone" id = "primary_phone" maxlength="16" pattern="\w+" oninvalid="setCustomValidity('Invalid phone number.')" onchange="try{setCustomValidity('')}catch(e){}"><!--Character restrictions-->
                    </div>
                    <div class = "form-group col-sm-4">
                        <label class = "control-label">Phone (Home/Business):</label>
                        <input class = "form-control" type = "text" name = "secondary_phone" id = "secondary_phone" maxlength="16" pattern="\w+" oninvalid="setCustomValidity('Invalid phone number.')" onchange="try{setCustomValidity('')}catch(e){}"><!--Character restrictions-->
                    </div>
                </div>

                <!--Input Email-->
                <div class = "row">
                    <div class="form-group col-sm-8">
                        <label class="control-label"><span style="color:red">*</span>Email:</label>
                        <input class = "form-control" type="email" name = "email" id="email" placeholder="Enter email" required pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+(?:[A-Z]{2}|com|org|net|gov|mil|biz|info|mobi|name|aero|jobs|museum)\b">
                    </div>
                </div>

                <!--Emergency Contacts-->
                <div>
                    <br>
                    <label>Emergency Contacts <span style = "font-weight:normal;">(Minimum 1)</span></label>
                </div>

                <% for(var i=1; i <= MAX; i++) { %>
                <div id = <%= "contact" + i %> <% if (i != 1) { %> class = "hidden" <% } %> >
                    <div>
                        <br>
                        <label>Emergency Contact <%= i %>:</label>
                    </div>
                    <div class="row">
                        <div class = "form-group col-sm-2">
                            <label><span style="color:red">*</span>First Name:</label>
                            <input type = "text" class = "form-control" name = <%= "emergencyfname" + i %> id = <%= "emergencyfname" + i %> placeholder= "eg. Alice" pattern= "[a-zA-Z0-9. ]+" oninvalid="setCustomValidity('Invalid name.')" onchange="try{setCustomValidity('')}catch(e){}" <%= if (i == 1) { %> required <% } %> ><!--Character restrictions-->
                        </div>
                        <div class = "form-group col-sm-2">
                            <label><span style="color:red">*</span>Last Name:</label>                            
                            <input type = "text" class = "form-control" name = <%= "emergencylname" + i %> id = <%= "emergencylname" + i %> placeholder="eg. Smith" pattern="[a-zA-Z0-9. ]+" oninvalid="setCustomValidity('Invalid name.')" onchange="try{setCustomValidity('')}catch(e){}" <%= if (i == 1) { %> required <% } %>><!--Character restrictions-->
                        </div>
                        <div class = "form-group col-sm-2">
                            <label><span style="color:red">*</span>Relationship:</label>
                            <input type = "text" class = "form-control" name = <%= "relationship" + i %> id = <%= "relationship" + i %> pattern="[a-zA-Z0-9. ]+" <%= if (i == 1) { %> required <% } %>><!--Character restrictions-->
                        </div>
                        <div class = "form-group col-sm-2">
                            <label><span style="color:red">*</span>Phone:</label>
                            <input type = "text" class = "form-control" name = <%= "ephone" + i %> id = <%= "ephone" + i %> maxlength="16" pattern="\w+" oninvalid="setCustomValidity('Invalid phone number.')" onchange="try{setCustomValidity('')}catch(e){}" <%= if (i == 1) { %> required <% } %>><!--Character restrictions-->
                        </div>
                    </div>
                </div>
                <% } %>
                <button type = "button" class= "btn btn-default col-sm-0" onclick="addcontact()" id = "add">Add another contact</button>
                <button type = "button" class= "btn btn-default col-sm-0 hidden" onclick="removecontact()" id = "remove">Remove a contact</button>
                <br><br>

                <!--Check if user is a student-->
                <div class = "row">
                    <div class="form-group col-sm-12">
                        <div>
                            <div> 
                                <label for='student'><input type="checkbox" id="student" name = "student" value="1"> I am a student</label>
                            </div>
                            <div id='student_info' class='hidden'>
                                <div class="row">
                                    <div class = "form-group col-sm-4">
                                        <label>School Name:</label>
                                        <input type = "text" class = "form-control" name = "schoolname" id = "schoolname" pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                                    </div>
                                    <div class = "form-group col-sm-4">
                                        <label>Grade/Year:</label>
                                        <input type = "text" class = "form-control" name = "grade" id = "grade" pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                                    </div>
                                </div>
                                <div class="row">
                                    <div class = "form-group col-sm-4">
                                        <label>Major:</label>
                                        <input type = "text" class = "form-control" name = "major" id = "major" pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                                    </div>
                                    <div class = "form-group col-sm-4">
                                        <label>ESL Level (if applicable):</label>
                                        <input type = "text" class = "form-control" name = "esl" id = "esl" pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <!--Checkbox for notifications-->
                <div class = "row">
                    <div class="form-group col-sm-4">
                        <label><input type="checkbox" id="send_notifications" name = "send_notifications" value="1"> Would you like us to send notifications</label>
                    </div>
                </div>
                


                <button type = "submit" class = "btn btn-default" onclick="return submitbutton()" id = "submit">Submit</button>

                </form>
            </div>
    </section>

    

    <%- include standardfooter %>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll visible-xs visible-sm">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap-datepicker.js"></script>
    <script src="js/datepicker.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="js/classie.js"></script>
    <script src="js/cbpAnimatedHeader.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="js/jqBootstrapValidation.js"></script>
    <script src="js/contact_me.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="js/freelancer.js"></script>

</body>

</html>
