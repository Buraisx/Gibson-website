<!DOCTYPE html>
<html lang="en">

<%- include standardnavbar.ejs %>

<head>
    <!-- CSS for the datepicker calendar -->
    <link href="css/datepicker.css" rel="stylesheet">
</head>

<body id="page-top" class="index">

    <!-- Portfolio Grid Section -->
    <section>
        <div class = "container">
                <h2>Part A: Your Information</h2>
                    <form name="frm" action = "/signup" method = "post" role = "form">

                    <!--Input first name, last name, date, gender-->
                    <div class = "row">
                        <div class = "form-group col-sm-2">
                            <label> Last Name: </label>                            
                            <input type = "text" class = "form-control" name = "lname" id = "lname" placeholder="eg.Bob"required pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                        </div>
                        <div class = "form-group col-sm-2">
                            <label> First Name: </label>
                            <input type = "text" class = "form-control" name = "fname" id = "fname" placeholder="eg.Smith" required pattern="[a-zA-Z0-9. ]+"><!--Character restrictions-->
                        </div>
                        <div class = "form-group col-sm-2">
                            <label> Birthdate: </label>
                            <input type="text" class = "form-control" name="birth_date" id="datepicker" placeholder="YYYY/MM/DD" data-date-end-date="0d" required>
                        </div>
                        <script src="js/jquery.js"></script>
                        <script src="js/bootstrap-datepicker.js"></script>
                        <script src="js/datepicker.js"></script>
                        <div class = "form-group col-sm-2">
                            <label class = "control-label"> Gender: </label>
                            <select class = "form-control" name = "gender" id = "gender" required>
                                <option value = "Male">Male</option>
                                <option value = "Female">Female</option>
                                <option value = "Unknown">Unspecified</option>
                            </select>
                        </div>
                    </div>

                    <!--Check if user is a student-->
                    <div class= "row">
                        <div>
                            <div> 
                                <label for='student'><input type="checkbox" id="student" value="1">Are you a student.</label>
                            </div>
                            <div id='student_info'>
                                add inputs here
                            </div>
                        </div>
                    </div>
                    <br>

                    <!--Input Address and Postal Code-->
                    <div class = "row">
                        <div class = "form-group col-sm-6">
                            <label class = "control-label"> Address: </label>
                            <input type = "text" class = "form-control" name = "address" id = "address" required pattern="^[a-zA-Z0-9_ ]*$"><!--Character restrictions-->
                        </div>
                        <div class = "form-group col-sm-2">
                            <label class = "control-label"> Postal Code: </label>
                            <input type = "text" class = "form-control" name = "postal_code" id="postal_code" minlength="6" maxlength="7" placeholder="eg.A1A1A1" required pattern="^[a-zA-Z]{1}\d{1}[A-Z]{1} *\d{1}[A-Z]{1}\d{1}$"><!--Character restrictions-->
                        </div>
                    </div>
                    
                    <!--Input Unit#, City and Province-->
                    <div class = "row">
                        <div class = "form-group col-sm-2">
                            <label class = "control-label"> Apt/Unit#: </label>
                            <span>* Optional</span>
                            <input type = "number" class = "form-control" name = "apt" id = "apt" max="4">
                        </div>
                        <div class = "form-group col-sm-4">
                            <label class = "control-label"> City: </label>
                            <input type = "text" class = "form-control" name = "city" id = "city" required pattern="[a-zA-Z. ]+">
                            <!--Character restrictions-->
                        </div>
                        <div class = "form-group col-sm-2">
                            <label class = "control-label"> Province: </label>
                            <input type = "text" class = "form-control" name = "province" id = "province" required pattern="[a-zA-Z. ]+"><!--Character restrictions-->
                        </div>
                    </div>
                    
                    <!--Input Phone Number-->
                    <div class = "row">
                        <div class = "form-group col-sm-4">
                            <label class = "control-label"> Phone(Primary/Cell): </label>
                            <span>* Optional</span>
                            <input class = "form-control" type = "text" name = "primary_phone" id = "primary_phone" maxlength="16" pattern="\w+"><!--Character restrictions-->
                        </div>
                        <div class = "form-group col-sm-4">
                            <label class = "control-label"> Phone(Home/Business): </label>
                            <span>* Optional</span>
                            <input class = "form-control" type = "text" name = "secondary_phone" id = "secondary_phone" maxlength="16" pattern="\w+"><!--Character restrictions-->
                        </div>
                    </div>
                    
                    <!--Input Email-->
                    <div class = "row">
                        <div class="form-group col-sm-8">
                            <label class="control-label">Email:</label>
                            <input  class = "form-control" type="email" name = "email" id="email" placeholder="Enter email" required pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+(?:[A-Z]{2}|com|org|net|gov|mil|biz|info|mobi|name|aero|jobs|museum)\b">
                        </div>
                    </div>

                    <!--Input Username-->
                    <div class = "row">
                        <div class="form-group col-sm-8">
                            <label class="control-label">Username:</label>
                            <span>*No SPECIAL CHARACTERS</span>
                            <input class = "form-control" type="text" name ="username" id="username" required pattern="\w+">
                            <!--Character restrictions-->
                        </div>
                    </div>

                    <!--Input Password-->
                    <div class = "row">
                        <div class="form-group col-sm-4">
                            <label class="control-label">Password:</label>
                            <input type="password" class = "form-control" name = "password" id="password" placeholder="Enter Password" minlength= "6" required pattern="(?=.*\d)(?=.*[a-zA-Z]).{6,}">
                            <!--Character restrictions-->
                        </div>
                        <div class="form-group col-sm-4">
                            <label class="control-label">Confirm Password:</label>
                            <span id="confirmpass" class="confirmpass"></span>
                            <input type="password" class = "form-control" name = "passwordhashed" id="passwordhashed" placeholder="Re-enter Password" onkeyup="checkPass(); return false;" required pattern="(?=.*\d)(?=.*[a-zA-Z]).{6,}">
                            <!--Character restrictions-->
                        </div>
                    </div>
                    <span>Password contain atleast a letter and a number and must have a minimum 6 characters. *No SPECIAL CHARACTERS</span>
                    <br/><br/>

                    <!--Checkbox for notifications-->
                    <div class= "row">
                        <label><input type="checkbox" id="send_notifications" value="1" checked>Would you like some notifications</label>
                    </div>
                    <button type = "submit" class = "btn btn-default" onclick="return val()">Submit</button>
                    </form>
                </div>
    </section>

    <%- include standardfooter %>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll visible-xs visible-sm">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- jQuery -->
    <!-- <script src="js/jquery.js"></script> -->

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="js/classie.js"></script>
    <script src="js/cbpAnimatedHeader.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="js/jqBootstrapValidation.js"></script>
    <script src="js/contact_me.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="js/freelancer.js"></script>

</body>

</html>
