<!DOCTYPE html>
<html lang="en">

<%- include standardnavbar.ejs %>

<head>
    <script src="https://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>
    <script src="/js/detailedcourseJQuery.js"></script>
    <link href="/css/simple-sidebar.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/scrollabletable.css" />
</head>

<body>
    <div class="page-wrap static-background">
        <section class="container rcorners">
            <input type="hidden" id="_csrf" value="<%= csrfToken %>">   

            <div class="col-sm-4 detailedcoursesidebarmargin">
                <div id="sidebar-wrapper">
                    <ul class="sidebar-nav nav-stacked" id="menu">
                        <li><a class="menucolour" href="#course-enrollment" data-toggle="tab"><i class="fa fa-user"></i>Enrollment</a></li>
                        <li><a class="menucolour" href="#course-description" data-toggle="tab"><i class="fa fa-info-circle"></i>Description</a></li>
                        <li><a class="menucolour" href="#course-schedule" data-toggle="tab"><i class="fa fa-calendar"></i>Schedule</a></li>
                        <li><a class="menucolour" href="#course-instructor" data-toggle="tab"><i class="fa fa-user"></i>Instructor</a></li>
                        <li><a class="menucolour" href="#course-tags" data-toggle="tab"><i class="fa fa-tags"></i>Manage Tags</a></li>
                    </ul>
                </div>
            </div>

            <!-- Details Section -->
            <div class="col-sm-offset-2">
                <!-- Course Header -->
                <div class="tab-pane">
                    <h2 class="col-sm-10" id="course-name"></h2>
                    <hr class="col-sm-10">
                <div>

                <!-- VOLUNTEER+ ONLY Course List of Enrolled Users -->
                <section class="tab-pane" id="course-enrollment">
                    <h3 class="col-sm-10" id="course-enrollment-header">Class Enrollment</h3>
                    <div class="col-sm-10" class="tablescroller" id="course-enrollment-scroller">
                        <table class="table table-striped" id="course-usertable">
                        </table>
                    </div>
                </section>
                <hr class="col-sm-10">

                <!-- DESCRIPTION -->
                <section class="tab-pane" id="course-description">
                    <h3 class ="col-sm-10" id="course-description-header">Description</h3>
                    <div class = "col-sm-10" id="course-description-content">
                        <p><span class="fieldname">Course Target: </span><span id="course-desc-target" class="fieldval"></p>
                        <p><span class="fieldname">Offered Languages: </span><span id="course-desc-language" class="fieldval"></p>
                        <p><span id="course-desc-text" class="fieldval"></p>
                        <p><span class="fieldname">Cost: </span><span id="course-desc-cost" class="fieldval"></p>
                    </div>
                </section>
                <hr class="col-sm-10">

                <!-- SCHEDULE -->
                <section class="tab-pane" id="course-schedule">
                    <h3 class = "col-sm-10 detailcoloursection" id="course-schedule-header">Schedule</h3>
                    <div class = "col-sm-10" id="course-schedule-content">
                        <p class="italic fieldval" id="course-schedule-daterange"></p>
                        <p class="italic" id="course-schedule-interval"></p>
                        <div class="tablescroller" id="course-schedule-scroller">
                            <table class="table table-striped" id="course-schedule-datetable">
                            </table>
                        </div>
                    </div>
                </section>
                <hr class="col-sm-10">

                <!-- INSTRUCTOR INFORMATION -->
                <section class="tab-pane" id="course-instructor">
                    <h3 class = "col-sm-10" id="course-instructor-header">Instructor</h3>
                    <div class = "col-sm-10" id="course-instructor-content">
                        <p><span class="fieldname">Instructor Name: </span><span id="course-instructor-name" class="fieldval"></p>
                        <p><span class="fieldname">Instructor Description: </span><span id="course-instructor-desc" class="fieldval"></p>
                    </div>
                </section>
                <hr class="col-sm-10">

                <section class="tab-pane" id="course-tags">
                    <h3 class = "col-sm-10" id="course-tags-header">Course Tags</h3>
                    <div class = "col-sm-10" id="course-tags-content">
                        <div class = "row" style ="margin-top:10px;">
                            <form class="form-horizontal col-sm-6" role="form" onsubmit="return false">
                                <input type="text" class="form-control" id="tags-search" placeholder="Add a tag to the course." style="display:none;"></input>
                            </form>
                            <button type = "button" class = "btn btn-default btn-primary col-sm-2" id = "tags-add" style="display:none;" onclick="addTag();">Add</button>
                        </div>
                        <hr id="tags-search-divider" style="display:none;">
                        <div class = "row">
                            <div id="tags-sortable" class = "tagbox"></div>
                        </div>
                        <div class="row">
                            <button type = "button" class = "btn btn-default btn-success" id = "tags-commit" onclick="commitTags();readModeTags();" style="display:none">Save</button>
                            <button type = "button" class = "btn btn-default btn-danger" id = "tags-cancel" onclick="cancelCommitTags();readModeTags();" style="display:none">Cancel</button>
                        </div>
                    </div>
               </section>
            </div>
        </section>
    </div>
    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll visible-xs visible-sm">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

</body>

<%- include standardfooter %>

</html>