<!DOCTYPE html>
<html>
<%- include standardnavbar.ejs %>

  <head>
    <title><%= title %></title>
    <script src="/js/getcart.js"></script>

    <!-- Custom Style Sheet -->
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
        <div class = "page-wrap">
            
            <div id="shoppingcart" class="rcorners">
                <!--GET csrf token-->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" id="_csrf">
                <h1>MY SHOPPING CART</h1>
                <table id="cart-table">
                    <tr class="cart-header">
                        <td id="cart-header-name">Course Name</td>
                        <td id="cart-header-code">Course Code</td>
                        <td id="cart-header-cost">Cost</td>
                        <td id="cart-header-delete">Delete</td>
                    </tr>
                </table>
                <div id="empty-cart">
                    <p id="empty-cart-text1">Oops! Your shopping cart is empty!</p>
                    <p id="empty-cart-text2">Go back to your profile <a href="/user/profile">here</a>.</p>
                </div>
                <div id="shoppingcart-buttons">                    
                </div> 
                <span><strong>NOTE: Refunds are not available online. Please contact a Gibson staff at the centre.<strong></span> 
            </div>
        </div>
  </body>

<%- include standardfooter %>
</html>
