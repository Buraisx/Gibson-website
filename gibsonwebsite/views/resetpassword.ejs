<!DOCTYPE html>
<html lang="en">

<%- include standardnavbar.ejs %>

<head>
    <script src = "/js/passwordvalidation.js"></script>
</head>

<body>
    <div class = "page-wrap">
        <div class = "container centered">
            <form name="frm" role = "form" action = "/resetpassword" method = "post"> <!-- form name="frm" action = "/signup" method = "post" role = "form" -->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="token" value="<%= token %>">
                <!--Input Password-->
                <div class = "row">
                    <div class="form-group col-sm-offset-3 col-sm-6">
                        <label class="control-label"><span class="required">*</span>Password:</label>
                        <input type="password" class = "form-control" name = "password" id="password" placeholder="Enter Password" onkeyup="checkPass(); return false;" minlength= "6" required pattern="(?=.*\d)(?=.*[a-zA-Z]).{6,}">
                        <!--Character restrictions-->
                    </div>
                </div>
                <div class = "row">
                    <div class="form-group col-sm-offset-3 col-sm-6">
                        <label class="control-label"><span class="required">*</span>Confirm Password:</label>
                        <span id="confirmpass" class="confirmpass"></span>
                        <input type="password" class = "form-control" name = "passwordhashed" id="passwordhashed" placeholder="Re-enter Password" onkeyup="checkPass(); return false;" required pattern="(?=.*\d)(?=.*[a-zA-Z]).{6,}">
                        <!--Character restrictions-->
                    </div>
                </div>
                <div class = "row">
                    <p class="smalltext col-sm-offset-3 col-sm-6">(Passwords must contain at least one letter and one number and must have a minimum 6 characters. No special characters.)</p>
                </div>
                <div class = "row">
                    <button type = "submit" class = "btn btn-default col-sm-offset-5 col-sm-2" id = "submit">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll visible-xs visible-sm">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

</body>

<%- include standardfooter %>

</html>
